{% for task in tasks %}
	<div class="task z-depth-2">
		<div class="row">
			<div class="col-md-12 col-lg-12 align-middle" >
				<p><b>Имя пользователя:</b> {{ task.username }}</p>
				<p><b>Email:</b> {{ task.email }}</p>
				<div id="response"></div>
				<div class="clear"></div>
				<p><b>Текст задачи:</b> {{ task.text }}</p>
				<p><b>Статус задачи:</b> {{ task.fulfilled }}</p>
				{% if is_admin == true %}
					<form action="edit.php" method="post">
						<div class="form-group">
							<label for="status">Выполнено</label>
							<input type="checkbox" id = "status" name="fulfilled" value="1">
						</div>
						<div class="form-group">
							<input type="hidden" name="task_id" value="{{ task.id }}">
							<button type="submit" class="btn btn-default z-depth-1 hoverable">Редактировать</button>
						</div>
					</form>
				{% endif %}
			</div>
		</div>
	</div>
{% endfor %}
<ul class="pagination z-depth-2">
	{% for query in queries %}
		<li><a href="?{{ query }}" class="inline-block"> {{ loop.index }} </a></li>
	{% endfor %}
</ul>